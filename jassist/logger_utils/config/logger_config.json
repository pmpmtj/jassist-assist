{
    "logging": {
        "_description": "Centralized logging configuration for all Voice Diary modules",
        "console": {
            "_description": "Console (terminal) logging configuration",
            "date_format": "%H:%M:%S",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "level": "INFO"
        },
        "file": {
            "_description": "File-based logging settings including rotation and formatting",
            "backup_count": 5,
            "date_format": "%Y-%m-%d %H:%M:%S",
            "encoding": "utf-8",
            "format": "%(asctime)s - %(name)s - %(levelname)s - [%(module)s:%(lineno)d] - %(message)s",
            "level": "INFO",
            "log_filename": "jassist.log",
            "max_size_bytes": 1048576
        },
        "modules": {
            "download_gdrive": {
                "level": "DEBUG",
                "log_filename": "download_gdrive.log"
            },
            "db_utils": {
                "level": "DEBUG",
                "log_filename": "db_utils.log"
            },
            "google_auth": {
                "level": "DEBUG",
                "log_filename": "google_auth.log"
            },
            "utils": {
                "level": "DEBUG",
                "log_filename": "utils.log"
            },
            "transcribe": {
                "level": "DEBUG",
                "log_filename": "transcribe.log"
            },
            "classification": {
                "level": "DEBUG",
                "log_filename": "classification.log"
            },
            "api_assistants_cliente": {
                "level": "DEBUG",
                "log_filename": "api_assistants_cliente.log"
            },
            "agenda": {
                "level": "DEBUG",
                "log_filename": "agenda.log"
            },
            "router": {
                "level": "DEBUG",
                "log_filename": "router.log"
            },
            "pipeline": {
                "level": "DEBUG",
                "log_filename": "pipeline.log"
            }
        },
        "validate_format": true
    }
}